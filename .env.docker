# Docker environment configuration
# Copy this file to .env and adjust values for your deployment

# === Backend Configuration ===
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# API Configuration
API_TITLE=ReachIQ API
API_VERSION=1.0.0
DEBUG=False

# === Frontend Configuration ===
VITE_API_BASE_URL=http://localhost:8000/api
VITE_APP_NAME=AI Outreach Intelligence Dashboard

# === Database Configuration (if using external DB) ===
# DATABASE_URL=postgresql://user:password@db:5432/dbname

# === Authentication ===
# Add Clerk or other auth provider keys here
# CLERK_FRONTEND_API_KEY=
# CLERK_API_KEY=

# === External APIs ===
# GNEWS_API_KEY=
# STRIPE_API_KEY=
# MICROSOFT_API_KEY=

# === Logging ===
LOG_LEVEL=INFO

# === CORS ===
CORS_ORIGINS=http://localhost:3000,http://localhost
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_HEADERS=*

# === Security ===
SECRET_KEY=change_me_in_production
ALLOWED_HOSTS=localhost,127.0.0.1,nginx,backend,frontend

# === Optional Services ===
# REDIS_URL=redis://redis:6379
# CELERY_BROKER_URL=redis://redis:6379
