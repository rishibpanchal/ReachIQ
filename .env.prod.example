# Production Environment Configuration
# Update these values for your production deployment

PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# === Backend Configuration ===
DEBUG=false
API_TITLE=PolyDeal API
API_VERSION=1.0.0

# === Frontend Configuration ===
VITE_API_BASE_URL=/api
VITE_APP_NAME=AI Outreach Intelligence Dashboard

# === Security ===
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_STRING_USE_openssl_rand_-base64_32
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# === Database Configuration ===
# DATABASE_URL=postgresql://user:password@db:5432/dbname

# === Authentication ===
# CLERK_FRONTEND_API_KEY=your_clerk_key
# CLERK_API_KEY=your_clerk_secret

# === External APIs ===
# GNEWS_API_KEY=your_gnews_key
# STRIPE_API_KEY=your_stripe_key
# MICROSOFT_API_KEY=your_microsoft_key

# === Logging ===
LOG_LEVEL=INFO

# === CORS ===
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_HEADERS=*

# === Email Configuration (if needed) ===
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_password

# === Redis (for caching, if needed) ===
# REDIS_URL=redis://redis:6379

